@model AccountingSystem.Models.AccountingSubject
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js"></script>

<h2>修改會計科目</h2>
<br />

<form method="post" action="/MaintenanceAccountingSubject/EditSubject">
    <div class="form-group row">
        <label for="inputSubjectID" class="col-sm-2">會計科目編碼</label>
        <div class="col-sm-6">
            <input type="text" id="inputSubjectID" name="Subject_ID" class="form-control" value="@Model.Subject_ID" readonly />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label for="inputSubjectName" class="col-sm-2">會計科目</label>
        <div class="col-sm-6">
            <input type="text" id="inputSubjectName" name="Subject_Name" class="form-control" value="@Model.Subject_Name" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label for="inputSubjectGroup1" class="col-sm-2">會計科目類別1</label>
        <div class="col-sm-6">
            <input type="text" id="inputSubjectGroup1" name="Subject_Group1" class="form-control" value="@Model.Subject_Group1" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label for="inputSubjectGroup2" class="col-sm-2">會計科目類別2</label>
        <div class="col-sm-6">
            <input type="text" id="inputSubjectGroup2" name="Subject_Group2" class="form-control" value="@Model.Subject_Group2" />
        </div>
    </div>
    <br />
    <input class="btn btn-outline-dark col-sm-1" type="submit" value="編輯" />
</form>
<script>
    var SG1 = ['1XXX-資產', '2XXX-負債', '3XXX-權益', '4XXX-收入', '5XXX-支出'];
    $('#inputSubjectGroup1').typeahead({ source: SG1 });
    var SG2 = ['11-流動資產', '14-非流動資產', '21-流動負債', '25-非流動負債', '31-歸屬於母公司業主之權益', '4XXX-收入', '5XXX-支出', '6600-其他綜合損益', '6700-本期綜合損益', '6800- 淨利（淨損）歸屬', '6900-綜合損益總額歸屬', '7000-基本每股盈餘', '7100-完全稀釋每股盈餘'];
    $('#inputSubjectGroup2').typeahead({ source: SG2 });
</script>
